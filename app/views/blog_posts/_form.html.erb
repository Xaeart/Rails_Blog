<%= form_for(@blog_post) do |f| %>
	<% if @blog_post.errors.any? %>
		<div class="Error_explanation">
			<h2> <%= pluralize(@blog_post.errors.count, "errors") %>
				prohibited this blog post from being saved.
			</h2>

			<ul>
				<% @blog_post.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>		

		<div class="form-group">
			<%= f.text_field :title, class: "form-control", placeholder: "Enter your cool blog post name here.." %>
		</div>

		<div class="form-group">
			<%= f.text_field :author, class: "form-control", placeholder: "Your Name.." %>
		</div>

		<div class="form-group">
			<%= f.text_area :blog_entry, class: "form-control", rows: "12",
				placeholder: "Start typing away.." %>
		</div>

		<div class="actions">
			<%= f.submit "post", class: "btn btn-default" %>
		</div>
	<% end %>